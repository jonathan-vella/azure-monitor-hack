<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0"
          name="viewport" />
    <title>@ViewData["Title"]</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link href="~/css/site.css"
          rel="stylesheet" />
    <script data-auto-replace-svg="nest"
            src="https://use.fontawesome.com/releases/v6.1.1/js/all.js"></script>
    @await RenderSectionAsync("Head", required: false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a asp-area=""
               asp-page="/Info/Index"
               class="navbar-brand">
                Task Tracker
            </a>
            <button aria-controls="navbarSupportedContent"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    class="navbar-toggler"
                    data-bs-target=".navbar-collapse"
                    data-bs-toggle="collapse"
                    type="button">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a asp-area=""
                           asp-page="/Info/Index"
                           class="nav-link text-dark">
                            Home
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <form class="form-inline my-2 my-lg-0">
            <div class="mr-2"
                 id="alertDiv">
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <span class="font-weight-bolder mr-2">Welcome</span>
                <a asp-page="/Users/Dashboard"
                   class="font-weight-bolder mr-1">
                    @User.Identity.Name
                </a>
                <a asp-page="/Account/Logout"
                   class="text-dark ml-1 btn btn-light">
                    Log me out!
                </a>
            }
            else
            {
                <a asp-page="/Account/Login">Login</a>
            }
        </form>
    </nav>
</header>
<div class="container">
    @if (IsSectionDefined("breadcrumb"))
    {
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                @await RenderSectionAsync("breadcrumb")
            </ol>
        </nav>
    }
    <main class="pb-3"
          role="main">
        @RenderBody()
    </main>
</div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2022 - TTA
        <a asp-area=""
           asp-page="/Privacy">
            Privacy
        </a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>