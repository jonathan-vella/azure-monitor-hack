@model List<TTA.Models.WorkTaskComment>
<div class="container">
    @foreach (var workTaskComment in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Posted by @workTaskComment.User.FullName</h5>
                <p class="card-text">@workTaskComment.Comment</p>
            </div>
            <div class="card-footer">
                <small class="text-muted">on @workTaskComment.DateCreated.ToShortDateString()</small>
            </div>
        </div>
    }
</div>